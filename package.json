{
  "name": "pardal",
  "version": "0.0.1",
  "description": "An accessible and customisable Twitter client",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager ./pardal pardal --platform=darwin,win32,linux",
    "test": "jest --coverage",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anapaulagomes/pardal.git"
  },
  "keywords": [
    "twitter",
    "acessibility"
  ],
  "author": "Ana Paula Gomes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anapaulagomes/pardal/issues"
  },
  "homepage": "https://github.com/anapaulagomes/pardal#readme",
  "dependencies": {
    "electron": "^4.0.4",
    "electron-packager": "^13.0.1",
    "electron-prebuilt": "^1.4.13"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/**/*.{json}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
